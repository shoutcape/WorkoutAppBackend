{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "rootDir": "./",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolvePackageJsonExports" : true,
    "moduleResolution": "node16",
    "experimentalDecorators" : true
  }
}

